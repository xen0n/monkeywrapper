<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Global styles -->
    <eat-comment />

    <style name="Theme.MW" parent="@style/Theme.AppCompat.Light.NoActionBar">

        <!--
        To restrict overdrawing, background settings is only applied to
        the outermost layout element itself; other elements get transparent
        background by default.
        -->
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@color/global_default_bg</item>
        <item name="android:colorBackground">@color/global_default_bg</item>
        <item name="colorPrimary">@color/brand_main</item>
        <item name="colorPrimaryDark">@color/brand_main_dark0</item>
        <item name="colorAccent">@color/brand_accent</item>
        <item name="android:textColor">@color/global_default_fg</item>
    </style>

    <style name="Theme.MW.TranslucentDecor" />

    <!-- Activity styles -->
    <style name="Theme.MW.Launcher" parent="Theme.MW.TranslucentDecor"></style>

</resources>